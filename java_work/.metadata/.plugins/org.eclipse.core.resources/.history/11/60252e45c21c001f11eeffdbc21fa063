package kcc.oop;

public class BookCounterMain {
	public static void main(String[] args) {
		Book java = new Book("ÀÚ¹Ù",30000,PriceDiscount.getInstance());
		Book jsp = new Book("JSP",20000,PriceDiscount.getInstance());
		Book oracle = new Book("Oracle",15000,PriceDiscount.getInstance());
		
		BookCacher bookCacher = new BookCacher(PriceDiscount.getInstance());
		
		bookCacher.addBookOf(java,jsp,oracle);
		
		int total = bookCacher.getTotalPrice();
		
		System.out.println(total);
		System.out.println(java.getPrice()+" "+(java.getPrice() - bookCacher.getDiscountPrice(java)));
		System.out.println(jsp.getPrice()+" "+(jsp.getPrice() - bookCacher.getDiscountPrice(jsp)));
		System.out.println(oracle.getPrice()+" "+(oracle.getPrice() - bookCacher.getDiscountPrice(oracle)));
	
	}
	

			
	
}
