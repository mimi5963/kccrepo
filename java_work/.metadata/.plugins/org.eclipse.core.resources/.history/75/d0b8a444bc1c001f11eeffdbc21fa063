package kcc.oop;

public class PriceDiscount implements DiscountPolicy{

	@Override
	public int discount(Book book) {
		int price = book.getPrice();
		if(price >=30000) {
			return (int)(price*0.25);
		}else if(price >= 20000) {
			return (int)(price*0.2);
		}else if(price >=15000) {
			return (int)(price*0.15);
		}else return price;
		
	}

}
