package kosa.basic;

import java.util.Arrays;

public class ArraySortEx {
	public static void main(String[] args) {
		
		//배열 내용 정렬 
		int arr[] = {4,2,5};
		System.out.println(Arrays.toString(arr));
		
		//오름차순 정렬
		Arrays.sort(arr);
		System.out.println(Arrays.toString(arr));
		
		//내림차순 출력
		for(int i=arr.length-1; i>=0;i--) {
			System.out.print(arr[i]+" ");
		} 
		
	}
}
